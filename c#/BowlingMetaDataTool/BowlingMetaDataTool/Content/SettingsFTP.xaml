<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:BowlingMetaDataTool="clr-namespace:BowlingMetaDataTool" x:Class="BowlingMetaDataTool.Content.SettingsFTP" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<ScrollViewer>
			<DataGrid Name="DG_SETTING" ItemsSource="{Binding Mode=OneWay}" AutoGenerateColumns="False">
				<DataGrid.Columns>
					<DataGridTextColumn Binding="{Binding ID}" Header="ID" IsReadOnly="True"/>
					<DataGridTextColumn Binding="{Binding Name}" Header="Name" IsReadOnly="True"/>
					<DataGridTextColumn Binding="{Binding WebFTPHost}" Header="WebFTPHost" IsReadOnly="True"/>
					<DataGridTextColumn Binding="{Binding WebFTPUserName}" Header="WebFTPUserName" IsReadOnly="True"/>
				</DataGrid.Columns>
			</DataGrid>
		</ScrollViewer>
	</Grid>
</UserControl>
